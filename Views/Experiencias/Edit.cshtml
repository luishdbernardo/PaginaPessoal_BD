@model PaginaPessoal_BD.Models.Experiencia

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Experiencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ExperienciaId" />
            <div class="form-group">
                <label asp-for="NomeEmpresa" class="control-label"></label>
                <input asp-for="NomeEmpresa" class="form-control" />
                <span asp-validation-for="NomeEmpresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataFim" class="control-label"></label>
                <input asp-for="DataFim" class="form-control" />
                <span asp-validation-for="DataFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Funcoes" class="control-label"></label>
                <input asp-for="Funcoes" class="form-control" />
                <span asp-validation-for="Funcoes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fotoFicheiro" class="control-label">Imagem</label>
                <input name="fotoFicheiro" class="form-control-file" type="file" />
            </div>
            <div class="form-group">
                <input asp-for="Foto" type="hidden" /> @*Faço um hidden foto porque é preciso passar para aqui a foto, porque se não o fizer depois de editar não me vai aparecer a foto:*@
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="mb-4">
        @if (Model.Foto != null)
        {
            <img src="data:image/jpeg;base64, @Convert.ToBase64String(Model.Foto)" class="img-fluid" />
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
