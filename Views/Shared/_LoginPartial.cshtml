@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


<ul class="navbar-nav justify-content-end">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item mx-2 mx-lg-2 mt-1">
            <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name</a>
        </li>
        <li class="nav-item mx-2 mx-lg-2 mt-2">
            <form class="form-inline text-primary" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" style="background-color:white" class="nav-link btn btn-link text-primary">Logout</button>
            </form>
        </li>
    }
    else
    {

        <li class="nav-item mx-0 mx-lg-1"><a class="nav-link py-2 px-0 px-lg-3 rounded text-primary" asp-area="" asp-controller="Usuarios" asp-action="Registo">Registar</a><a asp-area="Identity" asp-page="/Account/Login" style="text-decoration:none">&nbsp;&nbsp;&nbsp;&nbsp;Login</a></li>
            
    }
</ul>
